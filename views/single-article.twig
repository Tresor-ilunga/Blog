{% extends "layout.twig" %}

{% block body %}
    <div class="" style="width: 100%;">
        <img src="http://placehold.it/1800x300" class="card-img-top" alt="{{ article.name}}">
        <div class="card-body">
            <h3>{{ article.name}}</h3>
            <a href="">Published At{{ article.publishedAt | date("d/m/Y")}}</a>
            <p class="card-title">{{article.content}}</p>
        </div>
    </div>
{% endblock %}